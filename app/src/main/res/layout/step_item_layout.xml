<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="268dp"
    android:layout_height="368dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/min_margin_4dp"
    app:cardCornerRadius="@dimen/common_margin_8dp"
    android:layout_margin="@dimen/common_margin_8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/step_image"
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:src="@drawable/pancakes"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/step_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/min_margin_4dp"
        android:text="Приготовить тесто для домашних блинчиков. В большой миске слегка взбить венчиком яйца с сахаром и солью. Не следует это делать слишком долго и тщательно: главное, чтобы ингредиенты только соединились."
        app:layout_constraintTop_toBottomOf="@id/step_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>